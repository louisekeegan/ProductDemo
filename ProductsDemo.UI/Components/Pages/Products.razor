@page "/products"
@using ProductsDemo.UI.Models
@using ProductsDemo.UI.Services
@inject ProductService ProductService
@inject NavigationManager NavManager

<h3>Products</h3>

<button class="btn btn-primary mb-2" @onclick="CreateNew">Create New Product</button>

@if (products == null)
{
    <p><em>Loading...</em></p>
}
else if (!products.Any())
{
    <p>No products found.</p>
}
else
{
    <table class="table table-striped">
        <thead>
            <tr>
                <th>Name</th>
                <th>Price</th>
                <th>Description</th>
                <th>Created</th>
                <th>Updated</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var p in products)
            {
                <tr>
                    <td>@p.Name</td>
                    <td>@p.Price</td>
                    <td>@p.Description</td>
                    <td>@p.CreatedAt.ToLocalTime()</td>
                    <td>@p.UpdatedAt?.ToLocalTime()</td>
                    <td>
                        <button class="btn btn-sm btn-info me-1" @onclick="() => Edit(p.Id)">Edit</button>
                        <button class="btn btn-sm btn-danger" @onclick="() => Delete(p.Id)">Delete</button>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}

@code {
    private List<ProductModel>? products;

    protected override async Task OnInitializedAsync()
    {
        await LoadProducts();
    }

    private async Task LoadProducts()
    {
        products = await ProductService.GetAllAsync();
    }

    protected void CreateNew()
    {
        Console.WriteLine("Creating new");
        NavManager.NavigateTo("/products/create");
    }

    private void Edit(long id)
    {
        NavManager.NavigateTo($"/products/edit/{id}");
    }

    private async Task Delete(long id)
    {
        var confirmed = await JsRuntime.InvokeAsync<bool>("confirm", $"Delete product {id}?");
        if (!confirmed) return;

        await ProductService.DeleteAsync(id);
        await LoadProducts();
    }

    [Inject] IJSRuntime JsRuntime { get; set; } = default!;
}
